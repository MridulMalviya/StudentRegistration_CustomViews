<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="malviya.com.studentregistration_customviews.activity.RegistrationActivity">
<include layout="@layout/registration_toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter name"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:id="@+id/name"
            />
         <EditText
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="Enter age"
             android:inputType="number"
             android:textSize="20sp"
             android:layout_marginTop="20dp"
             android:id="@+id/age"
             />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Branch"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:id="@+id/branch"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Average Marks"
                android:id="@+id/avgmarks"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:inputType="numberDecimal"
                  />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Course"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:id="@+id/course"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Grade"
                android:id="@+id/grade"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Technical Strength"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:id="@+id/strength"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp"
                >
             <Button
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/buttonSubmit"
                 android:text="SUBMIT"
                 android:onClick="methodSubmit"
                 />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EXIT"
                    android:id="@+id/buttonExit"
                    android:onClick="methodExit"
                    />

            </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>
